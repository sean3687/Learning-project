<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SigninActivity"
    android:id="@+id/constraint_layout">

    <androidx.constraintlayout.utils.widget.ImageFilterView
        android:id="@+id/ic_fire_emoji"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="92dp"
        android:src="@drawable/fui_done_check_mark"
        app:layout_constraintBottom_toTopOf="@+id/account_sign_in"
        app:layout_constraintEnd_toEndOf="@+id/account_sign_in"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="@+id/account_sign_in" />

    <Button
        android:id="@+id/account_sign_in"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Continue &amp; Sign In"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>