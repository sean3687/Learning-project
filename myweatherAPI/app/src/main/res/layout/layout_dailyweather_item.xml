<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">

        <TextView
            android:id="@+id/date_day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="WED"
            android:textColor="@color/black"
            android:textSize="15dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.utils.widget.ImageFilterView
        android:id="@+id/imageFilterView"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:src="@drawable/pop"
        app:layout_constraintBottom_toBottomOf="@+id/date_day"
        app:layout_constraintStart_toEndOf="@+id/date_day"
        app:layout_constraintTop_toTopOf="@+id/date_day"
        app:layout_constraintVertical_bias="0.4" />

    <ImageView
        android:id="@+id/dailyicon"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/ic_baseline_cached_24"
        app:layout_constraintBottom_toBottomOf="@+id/popvalue"
        app:layout_constraintStart_toEndOf="@+id/popvalue"
        app:layout_constraintTop_toTopOf="@+id/popvalue"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/popvalue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="52%"
        android:textSize="15dp"
        app:layout_constraintBottom_toBottomOf="@+id/date_day"
        app:layout_constraintStart_toEndOf="@+id/imageFilterView"
        app:layout_constraintTop_toTopOf="@+id/date_day"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/minmax_dailytemp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="22°/32°"

        android:textSize="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/dailyicon"
        app:layout_constraintStart_toEndOf="@+id/dailyicon"
        app:layout_constraintTop_toTopOf="@+id/dailyicon" />


</androidx.constraintlayout.widget.ConstraintLayout>
