<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Nav.ProfileNav">


    <TextView
        android:id="@+id/title_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="228dp"
        android:text="Edit Profile"
        android:textColor="@color/black"
        android:textSize="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/username_profile"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="56dp"
        android:hint="Username"
        android:maxLength="20"
        android:textSize="15dp"
        app:layout_constraintEnd_toEndOf="@+id/title_profile"
        app:layout_constraintHorizontal_bias="0.481"
        app:layout_constraintStart_toStartOf="@+id/title_profile"
        app:layout_constraintTop_toBottomOf="@+id/title_profile" />

    <EditText
        android:id="@+id/userage_profile"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:hint="Your age"
        android:maxLength="3"
        android:textSize="15dp"
        app:layout_constraintEnd_toEndOf="@+id/username_profile"
        app:layout_constraintStart_toStartOf="@+id/username_profile"
        app:layout_constraintTop_toBottomOf="@+id/username_profile" />

    <EditText
        android:id="@+id/diedate_profile"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:hint="Die age"
        android:maxLength="3"
        android:textSize="15dp"
        app:layout_constraintEnd_toEndOf="@+id/userage_profile"
        app:layout_constraintStart_toStartOf="@+id/userage_profile"
        app:layout_constraintTop_toBottomOf="@+id/userage_profile" />


    <TextView
        android:id="@+id/notification"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:gravity="center"
        android:text=""
        android:textColor="#FF4C4C"
        app:layout_constraintEnd_toEndOf="@+id/diedate_profile"
        app:layout_constraintStart_toStartOf="@+id/diedate_profile"
        app:layout_constraintTop_toBottomOf="@+id/diedate_profile" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save"
        app:layout_constraintEnd_toEndOf="@+id/notification"
        app:layout_constraintStart_toStartOf="@+id/notification"
        tools:layout_editor_absoluteY="460dp" />

</androidx.constraintlayout.widget.ConstraintLayout>